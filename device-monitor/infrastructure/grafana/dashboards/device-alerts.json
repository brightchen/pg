{
  "dashboard": {
    "title": "IoT Device Alerts",
    "tags": ["iot", "alerts", "monitoring"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Total Alerts (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as count FROM alerts WHERE time >= NOW() - INTERVAL '1 hour'",
            "format": "table"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Unique Devices with Alerts",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(DISTINCT device_id) as count FROM alerts WHERE time >= NOW() - INTERVAL '1 hour'",
            "format": "table"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 20, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Alerts Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT time_bucket('1 minute', time) AS time, COUNT(*) as alerts FROM alerts WHERE time >= NOW() - INTERVAL '1 hour' GROUP BY 1 ORDER BY 1",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 30
            },
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 4,
        "title": "Top 10 Devices by Alert Count",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT device_id, COUNT(*) as alert_count FROM alerts WHERE time >= NOW() - INTERVAL '1 hour' GROUP BY device_id ORDER BY alert_count DESC LIMIT 10",
            "format": "table"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "continuous-GrYlRd"}
          }
        }
      },
      {
        "id": 5,
        "title": "Recent Alerts",
        "type": "table",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 14},
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT time, device_id, latest_event_time, EXTRACT(EPOCH FROM (time - latest_event_time)) as seconds_inactive FROM alerts WHERE time >= NOW() - INTERVAL '1 hour' ORDER BY time DESC LIMIT 100",
            "format": "table"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {"displayName": "time", "desc": true}
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "seconds_inactive"},
              "properties": [
                {
                  "id": "unit",
                  "value": "s"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Alert Heatmap by Hour",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT time_bucket('5 minutes', time) AS time, device_id, COUNT(*) as count FROM alerts WHERE time >= NOW() - INTERVAL '24 hours' GROUP BY 1, 2 ORDER BY 1",
            "format": "time_series"
          }
        ],
        "options": {
          "calculate": false,
          "cellGap": 2
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              }
            }
          }
        }
      }
    ]
  }
}
